{
  "name": "website-personal",
  "version": "1.0.0",
  "description": "App to generate static files to serve at http://bradleyoesch.com",
  "type": "module",
  "main": "src/js/app.js",
  "scripts": {
    "build": "radish build",
    "clean": "rm -rf build/",
    "clean-all": "rm -rf node_modules/ && clean",
    "dev": "radish dev",
    "lint-tmp-moved": "eslint src/js & eslint --fix src/js",
    "lint": "radish lint",
    "lint-all": "npm run lint & npm run lint-styles",
    "lint-styles": "stylelint --fix \"src/{scss,styles}/**/*.{css,scss}\"",
    "start": "BASE_PATH=`pwd` node src/js/app.js --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "pre-commit": [
    "lint",
    "lint-styles"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bradleyoesch/website-personal.git"
  },
  "author": "Bradley Oesch",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bradleyoesch/website-personal/issues"
  },
  "homepage": "https://github.com/bradleyoesch/website-personal#readme",
  "devDependencies": {
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "eslint": "^8.12.0",
    "eslint-config-radish": "^0.1.5",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "sass": "^1.32.8",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "mustache": "^4.1.0",
    "pre-commit": "^1.2.2",
    "radish": "^0.1.22",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "save": "^2.4.0",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^20.0.0"
  }
}
